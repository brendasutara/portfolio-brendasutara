---
interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date, company } = Astro.props;
---

<div
  class="absolute size-3 bg-pink-400 rounded-full mt-1.5 -start-1.5 border border-pink-400 dark:border-gray-900 dark:bg-gray-700"
>
</div>
<h3 class="text-xl font-semibold text-pink-400 dark:text-white">
  {title}
</h3>
<time
  class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
>
  <span
    class="mb-1 text-sm font-medium leading-none text-gray-400 dark:text-gray-500"
    >{company} -
  </span>{date}
</time>
<p class="mb-4 text-md font-medium text-white text-wrap dark:text-gray-400">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center justify-center gap-2 px-4 py-1 transition border-2 rounded-full dark:bg-gray-900 dark:border-gray-600 dark:text-white focus-visible:ring-pink-500/80 text-sm font-medium hover:transparent hover:border-pink-400 group max-w-fit hover:text-pink-200 focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
    >
      Saber m√°s{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
